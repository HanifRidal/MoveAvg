<%- include('../../partials/header.ejs') %>
<!-- Page Wrapper -->
<div id="wrapper">
  <%- include('../../partials/sidebar.ejs') %>

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <%- include('../../partials/navbar.ejs') %>

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
          <h1 class="h3 mb-0 text-gray-800">Moving Average Forecast</h1>
          <div>
            <a id="refreshForecastBtn" href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm mr-2">
              <i class="fas fa-sync-alt fa-sm text-white-50"></i> Refresh Forecast
            </a>
            <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
              <i class="fas fa-download fa-sm text-white-50"></i> Generate Report
            </a>
          </div>
        </div>

        <!-- Forecast Overview Cards -->
        <div class="row">
          <!-- Telur Forecast Card -->
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2 forecast-card">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                      Next Month Telur Forecast</div>
                    <div id="nextMonthTelurForecast" class="h5 mb-0 font-weight-bold text-gray-800">Loading...</div>
                    <div id="nextMonthTelurDate" class="text-xs text-gray-600 mt-1"></div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-egg fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Pakan Forecast Card -->
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2 forecast-card">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                      Next Month Pakan Forecast</div>
                    <div id="nextMonthPakanForecast" class="h5 mb-0 font-weight-bold text-gray-800">Loading...</div>
                    <div id="nextMonthPakanDate" class="text-xs text-gray-600 mt-1"></div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-seedling fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- FCR Forecast Card -->
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2 forecast-card">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Feed Conversion Ratio
                    </div>
                    <div class="row no-gutters align-items-center">
                      <div class="col-auto">
                        <div id="forecastFCR" class="h5 mb-0 mr-3 font-weight-bold text-gray-800">Loading...</div>
                      </div>
                      <div class="col">
                        <div class="progress progress-sm mr-2">
                          <div id="fcrProgress" class="progress-bar bg-info" role="progressbar" style="width: 50%"
                            aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-balance-scale fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Accuracy Card -->
          <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2 forecast-card">
              <div class="card-body">
                <div class="row no-gutters align-items-center">
                  <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                      Forecast Window</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">4 Months</div>
                    <div class="text-xs text-gray-600 mt-1">6 Months Ahead Forecast</div>
                  </div>
                  <div class="col-auto">
                    <i class="fas fa-calendar fa-2x text-gray-300"></i>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%- include('chart.ejs') %>

        <!-- Forecast Details Table -->
        <div class="row mt-4">
          <div class="col-12">
            <div class="card shadow mb-4">
              <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Forecast Details</h6>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-bordered" id="forecastTable" width="100%" cellspacing="0">
                    <thead>
                      <tr>
                        <th>Month/Year</th>
                        <th>Telur Forecast (kg)</th>
                        <th>Pakan Forecast (kg)</th>
                        <th>FCR</th>
                      </tr>
                    </thead>
                    <tbody id="forecastTableBody">
                      <tr>
                        <td colspan="4" class="text-center">Loading forecast data...</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <%- include('../../partials/footer.ejs') %>
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<%- include('../../partials/logout_modal.ejs') %> <%-
include('../../partials/script.ejs') %>

<script src="/controllers/movingAverageController.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>


<script>
  // Additional JavaScript for enhanced UI interaction
  document.getElementById('refreshForecastBtn').addEventListener('click', function(e) {
    e.preventDefault();
    
    // Show loading spinner on button
    const originalText = this.innerHTML;
    this.innerHTML = '<i class="fas fa-spinner fa-spin fa-sm text-white-50"></i> Refreshing...';
    this.disabled = true;
    
    // Reinitialize the controller to fetch fresh data
    MovingAverageController.init();
    
    // Restore button after 2 seconds
    setTimeout(() => {
      this.innerHTML = originalText;
      this.disabled = false;
    }, 2000);
  });
</script>