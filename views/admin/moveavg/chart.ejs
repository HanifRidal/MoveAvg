<div class="container-fluid px-0">
  <!-- Content Row -->

  <div class="row">
    <!-- Area Chart -->
    <div class="col-xl-8 col-lg-7">
      <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
          class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
        >
          <h6 class="m-0 font-weight-bold text-primary">Production Forecast Overview</h6>
          <div class="dropdown no-arrow">
            <a
              class="dropdown-toggle"
              href="#"
              role="button"
              id="dropdownMenuLink"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
            </a>
            <div
              class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
              aria-labelledby="dropdownMenuLink"
            >
              <div class="dropdown-header">Chart Options:</div>
              <a class="dropdown-item" href="#" id="downloadChartImage">Download as Image</a>
              <a class="dropdown-item" href="#" id="toggleDatasetsTelur">Toggle Telur Datasets</a>
              <a class="dropdown-item" href="#" id="toggleDatasetsPakan">Toggle Pakan Datasets</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#" id="showActualOnly">Show Actual Only</a>
              <a class="dropdown-item" href="#" id="showForecastOnly">Show Forecast Only</a>
              <a class="dropdown-item" href="#" id="showAllDatasets">Show All Datasets</a>
            </div>
          </div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
          <div class="chart-area">
            <canvas
              id="myAreaChart"
              width="811"
              height="400"
              style="display: block; height: 320px; width: 649px"
              class="chartjs-render-monitor"
            ></canvas>
          </div>
        </div>
      </div>
    </div>

    <!-- Pie Chart -->
    <div class="col-xl-4 col-lg-5">
      <div class="card shadow mb-4">
        <!-- Card Header - Dropdown -->
        <div
          class="card-header py-3 d-flex flex-row align-items-center justify-content-between"
        >
          <h6 class="m-0 font-weight-bold text-primary">Feed Conversion Analysis</h6>
          <div class="dropdown no-arrow">
            <a
              class="dropdown-toggle"
              href="#"
              role="button"
              id="dropdownMenuLink"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
            </a>
            <div
              class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
              aria-labelledby="dropdownMenuLink"
            >
              <div class="dropdown-header">Chart Options:</div>
              <a class="dropdown-item" href="#" id="downloadPieChartImage">Download as Image</a>
              <a class="dropdown-item" href="#" id="togglePieLabels">Toggle Labels</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="#" id="showPieInfo">What is FCR?</a>
            </div>
          </div>
        </div>
        <!-- Card Body -->
        <div class="card-body">
          <div class="chart-pie pt-4 pb-2">
            <canvas
              id="myPieChart"
              width="811"
              height="306"
              style="display: block; height: 245px; width: 649px"
              class="chartjs-render-monitor"
            ></canvas>
          </div>
          <div class="mt-4 text-center small">
            <span class="mr-2">
              <i class="fas fa-circle text-primary"></i> Actual FCR
            </span>
            <span class="mr-2">
              <i class="fas fa-circle text-success"></i> Forecast FCR
            </span>
            <span class="mr-2">
              <i class="fas fa-circle text-info"></i> Difference
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>